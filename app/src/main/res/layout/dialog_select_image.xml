<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingBottom="20dp">

    <com.example.lws.work.common.SquareImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:background="@drawable/btn_bg_ex_round2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/btnCamera"
            android:layout_width="17dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/cam"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@android:color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/btnGallery"
            android:layout_width="17dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:background="@drawable/gal"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@android:color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/btnFavorite"
            android:layout_width="17dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:background="@drawable/fav"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@android:color/black"
            android:textSize="20dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">


        <Button
            android:id="@+id/btnOk"
            android:layout_width="74dp"
            android:layout_height="46dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_bg_ex_round"
            android:gravity="center"
            android:text="O  K"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/btnSave"
            android:layout_width="74dp"
            android:layout_height="46dp"
            android:background="@drawable/btn_bg_ex_round4"
            android:gravity="center"
            android:text=""
            android:textSize="20dp" />

    </RelativeLayout>

</LinearLayout>